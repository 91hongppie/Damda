<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddPhotoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="logo"
            android:src="@drawable/logo_title" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/top_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar"
        android:orientation="horizontal" />

    <ScrollView
        android:id="@+id/image_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_division"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addphoto_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:minHeight="400dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:autofillHints="사진"
            android:contentDescription="사진을 등록해주세요"
            android:scaleType="fitCenter" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/image_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_scroll"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_division"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/select_photo_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@color/enableButton"
            android:text="@string/select_image"
            android:textColor="@color/colorWhite"
            android:theme="@style/ButtonStyle" />

        <Button
            android:id="@+id/upload_photo_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="35dp"
            android:background="@color/disableButton"
            android:text="@string/upload_image"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


</RelativeLayout>